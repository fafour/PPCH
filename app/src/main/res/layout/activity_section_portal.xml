            android:layout_weight="0.7"
            android:layout_height="wrap_content"
            android:id="@+id/btnContent"
            android:onClick="openContentAction"/>
            -->
        <View
            android:layout_width="0dip"
            android:layout_weight="0.15"
            android:layout_height="1dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="@dimen/small_margin_gap"
        android:id="@+id/layoutExam"
        android:layout_above="@id/layoutContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1.0">

        <View
            android:layout_width="0dip"
            android:layout_weight="0.15"
            android:layout_height="1dp" />

        <th.go.nacc.nacc_law.view.ButtonExamView
            android:layout_width="0dip"
            android:layout_weight="0.7"
            android:layout_height="wrap_content"
            android:id="@+id/btnExam"
            android:src="@drawable/btn_exam"
            android:onClick="openExamAction"/>


